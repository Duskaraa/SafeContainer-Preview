{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Node",
    "allowJs": true,
    "checkJs": false,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": [
    "scripts/**/*"
  ],
  "exclude": [
    "lib",
    "dist",
    "node_modules"
  ],
  "compileOnSave": false
}